{
  "version": 2,
  "builds": [
    {
      "src": "backoffice-api/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd backoffice-api && npm run build && cp -r node_modules dist/ && cp package.json dist/"
      }
    },
    {
      "src": "backoffice-admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backoffice-api/dist/api.js"
    },
    {
      "source": "/(.*)",
      "destination": "/backoffice-admin/$1"
    }
  ]
}