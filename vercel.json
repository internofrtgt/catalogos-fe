{
  "version": 2,
  "builds": [
    {
      "src": "backoffice-api/src/api.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backoffice-api/src/**",
        "excludeFiles": "backoffice-api/src/database/migrations/**",
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "backoffice-admin/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backoffice-api/src/api.ts"
    },
    {
      "source": "/frt-favicon.png",
      "destination": "/backoffice-admin/frt-favicon.png"
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "destination": "/backoffice-admin/$1"
    },
    {
      "source": "/((?!api|frt-favicon\\.png|.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot)).*)",
      "destination": "/backoffice-admin/index.html"
    }
  ]
}