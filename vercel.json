{
  "version": 2,
  "name": "backoffice-lasalle",
  "buildCommand": "cd backoffice-admin && npm run build",
  "outputDirectory": "backoffice-admin/dist",
  "functions": {
    "backoffice-api/src/main.ts": {
      "runtime": "nodejs18.x",
      "includeFiles": "backoffice-api/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backoffice-api/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/backoffice-admin/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}