{
  "buildCommand": "cd backoffice-admin && npm install && npm run build",
  "outputDirectory": "backoffice-admin/dist",
  "functions": {
    "api/*.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/api.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}