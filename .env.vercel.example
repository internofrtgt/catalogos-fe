# Vercel Environment Variables Example
# Copy these to your Vercel project settings

# Application
NODE_ENV=production
PORT=3000

# Database (Vercel Postgres)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_PRISMA_URL=postgresql://username:password@host:port/database?sslmode=require
POSTGRES_URL_NON_POOLING=postgresql://username:password@host:port/database?sslmode=require

# Database Configuration
DATABASE_HOST=host.vercel-storage.com
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your-password
DATABASE_NAME=verceldb
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=false

# TypeORM Configuration
TYPEORM_SYNCHRONIZE=false
TYPEORM_RUN_MIGRATIONS=true
TYPEORM_LOGGING=error

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN_SECONDS=3600

# Default Admin User
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=ChangeMe123!